---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout
    title="Zig Benchmark: 50M Queries | QAIL"
    description="QAIL-Zig achieves 315K q/s - 95% of native Rust performance!"
>
    <style>
        .big-number {
            font-size: 6rem;
            font-weight: 900;
            background: linear-gradient(135deg, #60a5fa, #93c5fd);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1;
            margin: 1.5rem 0;
        }

        .benchmark-table {
            width: 100%;
            border-collapse: collapse;
            margin: 2rem 0;
            font-family: "JetBrains Mono", monospace;
            border: 1px solid rgba(99, 130, 177, 0.3);
            border-radius: 8px;
            overflow: hidden;
        }

        .benchmark-table th,
        .benchmark-table td {
            padding: 1rem;
            text-align: right;
            border: 1px solid rgba(99, 130, 177, 0.2);
        }

        .benchmark-table th {
            background: rgba(30, 41, 59, 0.6);
            color: #94a3b8;
            font-weight: 600;
        }

        .benchmark-table td:first-child {
            text-align: left;
            color: #e2e8f0;
        }

        .benchmark-table .winner {
            color: #60a5fa;
            font-weight: bold;
        }

        .benchmark-table .close {
            color: #4ade80;
            font-weight: bold;
        }

        .speedup-badge {
            display: inline-block;
            background: rgba(96, 165, 250, 0.15);
            color: #60a5fa;
            padding: 0.25rem 0.75rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.875rem;
            border: 1px solid rgba(96, 165, 250, 0.3);
        }

        .highlight-card {
            background: rgba(30, 58, 95, 0.5);
            border: 1px solid rgba(99, 130, 177, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            margin: 2rem 0;
            text-align: center;
        }

        .highlight-card h3 {
            color: #e2e8f0;
            margin: 0 0 1rem;
        }

        .architecture-diagram {
            background: rgba(30, 41, 59, 0.6);
            border: 1px solid rgba(99, 130, 177, 0.25);
            border-radius: 12px;
            padding: 2rem;
            margin: 2rem 0;
            font-family: "JetBrains Mono", monospace;
            font-size: 0.9rem;
            line-height: 1.6;
            overflow-x: auto;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
            margin: 2rem 0;
        }

        .stat-card {
            background: rgba(30, 41, 59, 0.6);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            border: 1px solid rgba(99, 130, 177, 0.25);
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #60a5fa;
        }

        .stat-label {
            color: #94a3b8;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        @media (max-width: 768px) {
            .big-number {
                font-size: 4rem;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .benchmark-table {
                font-size: 0.75rem;
            }

            .benchmark-table th,
            .benchmark-table td {
                padding: 0.5rem;
            }

            .architecture-diagram {
                padding: 1rem;
                font-size: 0.65rem;
            }
        }
    </style>

